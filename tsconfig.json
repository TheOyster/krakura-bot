{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitReturns": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "strict": true,
        "noImplicitAny": false,
        "outDir": "./build",
        "allowJs": true,
        "resolveJsonModule": true
    },
    "compileOnSave": true,
    "include": [ "connectors/karura/karura-client.ts", "src/lib/get-credentials.ts", "src/lib/price.ts", "src/data/**/*"],
    "exclude": ["node_modules"],
    "files": [
        "connectors/karura/karura-client.ts",
        "src/lib/get-credentials.ts"
    ]
}